<ul class="list-unstyled">
  
<% microposts.each do |micropost| %>

    <li class="media mb-3">
      <img class="mr-2 rounded" src="
<%= gravatar_url(micropost.user, { size: 50 }) %>
" alt="">
      <div class="media-body">
        <div>
          
<%= link_to micropost.user.name, user_path(micropost.user) %>
 <span class="text-muted">posted at 
<%= micropost.created_at %>
</span>
        </div>
        <div class="list-group list-group-item">
          <p class="mb-0"><i class="fas fa-dove"></i>
            検索ワード 
          </p>
          <p class="list-group-item"><a href="https://www.google.co.jp/search?q=<%= micropost.word %>" target="_blank" rel="noopener">
<%= micropost.word %></a>
          </p>
          <p class="mb-0"><i class="far fa-comment-dots"></i>
            一言コメント
          </p>
          <p class="list-group-item">
<%= micropost.comment %>
          </p>
          <% if micropost.micropost_image? %>
<%= image_tag micropost.micropost_image.url %>
<% end %>
        </div>
        <div>
          
<% if current_user == micropost.user %>

<%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>

<% else %>
        </div>
        <div>
          
<%= render 'favorites/like_button', micropost: micropost %>
          
<% end %>

        </div>
      </div>
    </li>
  
<% end %>

  
<%= paginate microposts %>

</ul>