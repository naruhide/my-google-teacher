<% if logged_in? %>

  <div class="row">
    <aside class="col-sm-4">
      
<%= form_with(model: @micropost, local: true) do |f| %>

      <div class="form-group">
<%= f.text_field :word, class: 'form-control', placeholder: 'ワード' %>
      </div>
      <div class="form-group">
<%= f.text_area :comment, class: 'form-control', row: 5, placeholder: 'コメント' %>
      </div>
      
<%= f.submit 'Post', class: 'btn btn-primary btn-block' %>

<% end %>
    </aside>
    
    <div class="col-sm-8">
<%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>My Google Teacher</h1>
    
<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>

<div class="timeline">
  <h3>タイムライン</h3>
  
  <ul class="list-unstyled">
    
<% @microposts.each do |micropost| %>

    <li class="media mb-3">
      <div class="media-body">
        <div>
<%= micropost.user.name %>
 <span class="text-muted">posted at 
<%= micropost.created_at %>
</span>
        </div>
        <div>
          <p class="mb-0">ワード ->
<%= micropost.word %>
          </p>
        </div>
        <div>
          <p class="mb-0">コメント ->
<%= micropost.comment %>
          </p>
        </div>
      </div>
    </li>
  
<% end %>

<%= paginate @microposts %>

</ul>
</div>
<% end %>